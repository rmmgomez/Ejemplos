{% extends "base.njk" %}
{% block titulo %}Contactos | Nuevo{% endblock %}
{% block contenido %}
    <h1>Inserción de nuevo contactos</h1>
    <form action="/contactos" method="post">
        <div class="form-group mb-3">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" name="nombre" placeholder="Nombre del contacto..."/>
        </div>
        <div class="form-group mb-3">
            <label for="edad">Edad:</label>
            <input type="number" class="form-control" name="edad" placeholder="Edad del contacto..."/>
        </div>
        <div class="form-group mb-3">
            <label for="telefono">Teléfono:</label>
            <input type="text" class="form-control" name="telefono" placeholder="Teléfono del contacto..."/>
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
{% endblock %}